<% @title = _("View FOI email address for '{{authority_name}}'",
              :authority_name => h(@public_body.name)) %>

<h1><%= _("View FOI email address for {{authority_name}}",
          :authority_name => public_body_link(@public_body))%></h1>

<p><%= _("To view the email address that we use to send FOI requests to " \
	        "{{authority_name}}, please enter these words.",
	     :authority_name => h(@public_body.name))%></p>

<%= form_for :contact do |f| %>
  <%= recaptcha_tags %>

  <%= hidden_field_tag(:submitted_view_email, { :value => 1 } ) %>

  <p><%= submit_tag _("View email") %></p>
<% end %>
