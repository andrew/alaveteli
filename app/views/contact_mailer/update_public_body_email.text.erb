<%= _("{{user_name}} would like the email address for {{authority_name}} to " \
	     "be updated",
	  :user_name => @change_request.get_user_name,
	  :authority_name => @change_request.get_public_body_name) %>

<%= _("Email:") %>
<%= @change_request.public_body_email %>

<%= _("Source:") %>
<%= @change_request.source_url %>

<%= _("Notes:") %>
<%= @change_request.notes %>

<%= _('Update the address:') %>
<%= edit_admin_body_path(@change_request.public_body, :change_request_id => @change_request.id, :only_path => false) %>

<%= _('Close the request and respond:') %>
<%= edit_admin_change_request_url(@change_request, :only_path => false ) %>
